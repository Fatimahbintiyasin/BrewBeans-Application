<div class="container" style="background-image: url('/content/images/img3.png'); 
    background-repeat: no-repeat; background-position: center; background-size:contain; ">
  <main>
    <div style="background-color: rgba(255, 255, 255, 0.9);" class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center ">
      <div class="col-md-12 p-lg-5 mx-auto my-5">
        <h1 style="font-weight: bolder; font-size: 45px; color: #2158be;" class="display-4 fw-normal">BrewBean's</h1>
        <p style="font-weight: bolder; font-size: 35px; color:rgb(167, 79, 11); text-shadow: 1px 1px 1px rgb(0, 0, 0);" class="lead fw-normal">
          Indulge in the rich aroma and exquisite flavors of BrewBean's premium coffee blends, 
          crafted to perfection for an unparalleled coffee experience like no other.</p>
          <div>
            <!-- Add date input -->
            <input type="date" id="selectedDate">
          </div>
          
        <a style="font-weight: bolder; color:black;" class="btn btn-outline-secondary" 
        onclick="navigateToShop()">Shop Now</a>
      </div>
    </div>
  </main>
</div>

<script>

  // Get the date in the format "YYYY-MM-DD"
  const today = new Date().toISOString().split('T')[0];
  
  // Set the default value of the input element
  document.getElementById('selectedDate').value = today;


  function navigateToShop() {
    const selectedDate = document.getElementById('selectedDate').value;
    window.location.href = `/shop/${selectedDate}`;
  }
</script>
